<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="buyingStation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="$shared/xml/schema/placeable.xsd">
    <storeData>
        <name>$l10n_storeItem_waterTank02</name>
        <image>maps/placeables/cowFarm/store_water.png</image>
        <functions>
            <function>$l10n_function_waterTower</function>
        </functions>
        <price>12300</price>
		
        <canBeSold>true</canBeSold>
        <showInStore>false</showInStore>
		<!-- <boughtWithFarmland>true</boughtWithFarmland> -->
		
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>NONE</brand>
        <species>placeable</species>
        <category>waterTanks</category>
        <brush>
            <type>placeable</type>
            <category>buildings</category>
            <tab>containers</tab>
        </brush>
        <vertexBufferMemoryUsage>62208</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>12288</indexBufferMemoryUsage>
        <textureMemoryUsage>1048576</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
    </storeData>

    <base>
        <filename>maps/placeables/cowFarm/waterTank.i3d</filename>
		<boughtWithFarmland>true</boughtWithFarmland>
    </base>

    <placement useRandomYRotation="false" useManualYRotation="true">
        <sounds>
            <place template="smallImp"/>
        </sounds>
    </placement>

    <ai>
        <updateAreas>
            <updateArea startNode="0>3|0" endNode="0>3|0|0" />
        </updateAreas>
    </ai>

    <hotspots>
        <hotspot type="LOADING" linkNode="0>0" />
    </hotspots>

    <buyingStation node="0>0" supportsExtension="false" >
        <loadTrigger triggerNode="0>0"  fillTypes="WATER" fillLitersPerSecond="150" autoStart="true" /> <!-- aiNode="0>1" -->
        <fillType name="water" priceScale="1" />
    </buyingStation>

	<clearAreas>
    </clearAreas>

    <leveling >
    </leveling>

    <indoorAreas>
    </indoorAreas>

</placeable>
