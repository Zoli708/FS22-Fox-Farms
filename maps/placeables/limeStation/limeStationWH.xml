<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="buyingStation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="$shared/xml/schema/placeable.xsd">
    <storeData>
        <name>$l10n_shopItem_limeStation</name>
        <image>maps/placeables/sellingStations/store_warehouse.png</image>
        <price>1</price>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>NONE</brand>
        <species>placeable</species>
        <category>placeableMisc</category>
        <canBeSold>false</canBeSold>
        <showInStore>false</showInStore>
		<boughtWithFarmland>true</boughtWithFarmland>
        <vertexBufferMemoryUsage>208128</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>37888</indexBufferMemoryUsage>
        <textureMemoryUsage>1638400</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
    </storeData>

    <base>
        <filename>maps/placeables/limeStation/limeStationWH.i3d</filename>
    </base>

    <placement useRandomYRotation="false" useManualYRotation="true" >
    </placement>

    <leveling requireLeveling="true" maxSmoothDistance="1" maxSlope="75" maxEdgeAngle="30">
    </leveling>

    <ai>
        <updateAreas>
            <updateArea startNode="0>1|0" endNode="0>1|0|0" />
        </updateAreas>
    </ai>

    <tipOcclusionUpdateAreas>
        <tipOcclusionUpdateArea startNode="0>1|0" endNode="0>1|0|0" />
    </tipOcclusionUpdateAreas>

    <buyingStation node="0>0" supportsExtension="false">
        <loadTrigger triggerNode="0>0|1|0" fillTypes="LIME SEEDS FERTILIZER LIQUIDFERTILIZER HERBICIDE" fillLitersPerSecond="200" infiniteCapacity="true" /> <!-- aiNode="0>0|1|1" -->
		<fillType name="LIME" 				priceScale="1.8" />
		<fillType name="SEEDS" 				priceScale="1.8" />
		<fillType name="FERTILIZER" 		priceScale="1.8" />
		<fillType name="LIQUIDFERTILIZER" 	priceScale="1.8" />
		<fillType name="HERBICIDE" 			priceScale="1.8" />
    </buyingStation>

    <hotspots>
        <hotspot type="LOADING" linkNode="0>0|0" />
    </hotspots>

    <triggerMarkers>
        <triggerMarker node="0>2" filename="$data/shared/assets/marker/markerIcons.xml" id="LOAD" />
    </triggerMarkers>

    <clearAreas>
    </clearAreas>

    <indoorAreas />

</placeable>
